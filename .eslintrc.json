{
  "env": {
    "browser": true,
    "es2021": true
  },
  "globals": {
    "CodeMirror": true
  },
  "extends": ["eslint:recommended"],
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "arrow-body-style": ["warn", "as-needed"],
    "no-empty": "off",
    "no-var": "warn",
    "prefer-const": "warn",
    "prefer-template": "warn",
    "prefer-arrow-callback": "warn"
  }
}
